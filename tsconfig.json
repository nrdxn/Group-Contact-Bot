{
    "compilerOptions": {
      "target": "ES2020",
      "outDir": "dist",
      "module": "CommonJS",
      "strict": true,
      "alwaysStrict": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "paths": {
        "@services/*": [
          "./src/Core/Services/*"
        ],
        "@enums/*": [
          "./src/Core/Enums/*"
        ],
        "@dto/*": [
          "./src/Dto/*"
        ],
        "@db/*": [
          "./src/Core/Database/*"
        ],
        "@core/*": [
          "./src/Core/*"
        ],
      }
    }
  }